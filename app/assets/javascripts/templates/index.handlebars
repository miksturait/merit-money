  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container-fluid">
        <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="brand" href="#">Kudos</a>
        <div class="nav-collapse collapse">
          <ul class="nav pull-right">
            <li><a href="/logout">Sign Out</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </div>
  </div>

  {{#with controllers.currentUser}}
    <div id="dashboard" class="row-fluid">
      <div id="flash" class="alert"></div>
      <div class="row-fluid">
        <div class="span12">
          <img class="pull-left" {{bindAttr src="gravatar"}}  />
          <p class="pull-left">
            <span class="kudos-left">{{kudosLeft}}</span><i class="icon-star icon-kudo"></i>left
          </p>
        </div>
      </div>
    </div>
  {{/with}}

  <div id="kudos-content">
    <ul id="users-list">
    {{#each user in controllers.users}}
      <li class="coworker">
        <div class="row-fluid">
          <div class="span12">
            <img class="pull-left" {{bindAttr src="user.gravatar"}}  />
            <h2 class="pull-left"><small>{{user.firstName}} {{user.lastName}}</small></h2>
            <a href="#" class="btn btn-primary pull-right" {{action "addKudo" user target="controller.controllers.kudo"}}>add</a>
          </div>
        </div>
      </li>
    {{/each}}
    </ul>
  </div>

  <div id="kudos-stats" class="row-fluid">
    <div class="span6 me">
      <h2>My Stats</h2>
        {{#with controllers.currentUser}}
        <ul>
          <li><i class="icon-star icon-kudo"></i>Received Last Week: <strong>{{kudosReceived}}</strong></li>
          <li><i class="icon-star icon-kudo"></i>Received Since Last Bonus: <strong>{{kudosTotalReceived}}</strong></li>
        </ul>
      {{/with}}
      </div>

      <div class="span6 coworkers pull-right">
        <h2>TOP3 Collectors<br /><small></small></h2>
        {{#if controllers.top}}
        <ul>
          {{#each controllers.top}}
          <img {{bindAttr src="gravatar"}} />
          {{/each}}
        </ul>
        {{else}}
        <p>Wanna be here? Be nice to other people!</p>
        {{/if}}
      </div>
  </div>

</div><!-- container -->

