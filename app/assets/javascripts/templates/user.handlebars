<div class="coworker">
    <div class="row-fluid">
      <div class="span12">
        <img class="pull-left" {{bindAttr src="gravatar"}}  />
        <h2 class="pull-left">{{firstName}} {{lastName}}</h2>
      </div>
    </div>
</div>

<div class="row-fluid">
  <div class="span6">
    <form>
      <div class="control-group">
        <label class="control-label" for="kudos-add">I’d like to add</label>
        <div class="controls">
          <select id="kudos-add">
            <option value="1">1 kudo</option>
            <option value="2">2 kudos</option>
            <option value="3">3 kudos</option>
            <option value="4">4 kudos</option>
            <option value="5">5 kudos</option>
          </select>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="kudos-comment">Comment</label>
        <div class="controls">
          {{view Ember.TextArea id="kudos-comment" placeholder="I’d like to add kudo because…" rows="6"}}
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <button {{action addKudo this}} type="submit">Add</button>
        </div>
      </div>
     </form>
  </div>

  <div class="span6 stats">
    <div>
        <h2 class="text-center">Current Week</h2>
        {{#if controller.kudoReceived}}
        <ul>
          {{#each kudo in controller.kudoReceived}}
          <li class="kudo-received">
            <i class="icon-star icon-kudo"></i><strong>{{kudo.value}}</strong>:
            {{#if kudo.comment}}
              {{kudo.comment}}
            {{else}}
              :-)
            {{/if}}
          </li>
          {{/each}}
        </ul>
        {{else}}
        <p>no kudos given</p>
        {{/if}}
    </div>

    <div>
        <h2 class="text-center">Last Week</h2>
        {{#if controller.kudoLastWeek}}
        <ul>
          {{#each kudo in controller.kudoLastWeek}}
          <li class="kudo-received">
            <i class="icon-star icon-kudo"></i><strong>{{kudo.value}}</strong>:
            {{#if kudo.comment}}
              {{kudo.comment}}
            {{else}}
              :-)
            {{/if}}
          </li>
          {{/each}}
        </ul>
        {{else}}
        <p>no kudos given</p>
        {{/if}}
    </div>
</div>